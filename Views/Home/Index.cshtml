@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/festival1.jpg" alt="Festival3">
            <div class="carousel-caption">
                <h3>De nombreux festivals à travers tout le pays</h3>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/festival2.jpg" alt="Festival2">
            <div class="carousel-caption">
                <h3>Des solutions d'hébergement simples et accessibles</h3>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/festival3.jpg" alt="Festival1">
            <div class="carousel-caption">
                <h3>Réservez vos places en quelques clics !</h3>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Les festivals</h2>
        <p>
            Lister tous les festivals dont la billeterie est actuellement ouverte
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-6">
        <h2>Rechercher un festival</h2>
        <p>Recherchez des festivals en particulier en fonction de votre ville, de votre genre musical préféré ou des dates de ce festival</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
    </div>
</div>